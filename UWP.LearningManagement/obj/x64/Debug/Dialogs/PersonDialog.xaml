<ContentDialog x:ConnectionId='1'
    x:Class="UWP.LearningManagement.Dialogs.PersonDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP.LearningManagement.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add a new person"
    PrimaryButtonText="Ok"
    SecondaryButtonText="Cancel"
                                                         
                                                             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="First Name"></TextBlock>
        <TextBox Grid.Column="1" Text="{Binding Path=FirstName, Mode=TwoWay}"></TextBox>
        <TextBlock Grid.Row="1" Text="Last Name"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=LastName, Mode=TwoWay}"></TextBox>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Type"></TextBlock>
        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding PersonTypes}" SelectedItem="{Binding SelectedType, Mode=TwoWay}" />
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Class Level"></TextBlock>
        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding StudentLevels}" SelectedItem="{Binding SelectedClass, Mode=TwoWay}" />
        
    </Grid>
</ContentDialog>

