<Page
    x:Class="UWP.LearningManagement.DetailedCourse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP.LearningManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock FontSize="60*" Text="{Binding Code}"></TextBlock>
            <StackPanel Margin="10,10,10,10" Orientation="Horizontal">
                <TextBlock Margin="0,0,5,0" Text="Room Number:"></TextBlock>
                <TextBlock Text="{Binding Room}"></TextBlock>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10,10,10,10">
            <TextBlock FontSize="40*" Text="{Binding Name}"></TextBlock>
            <StackPanel Margin="10,10,10,10" Orientation="Horizontal">
                <TextBlock Margin="0,0,5,0" Text="Credit Hours:"></TextBlock>
                <TextBlock Text="{Binding Hours}"></TextBlock>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button x:ConnectionId='8' Margin="10,0,10,0" FontSize="20" Content="EDIT ROSTER"                     ></Button>
            <ListBox ItemsSource="{Binding Roster}" Margin="10,0,10,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Display, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button x:ConnectionId='6' Margin="10,0,10,0" FontSize="20" Content="ADD AN ANNOUNCEMENT"                           ></Button>
            <ListBox ItemsSource="{Binding Announcements, Mode=OneWay}" Margin="10,0,10,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Display, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Button x:ConnectionId='3' Margin="10,10,10,10" FontSize="20" Content="ADD A MODULE"                     ></Button>
            <ListBox x:ConnectionId='4' ItemsSource="{Binding Modules, Mode=TwoWay}" Margin="10,0,10,0"
                    SelectedItem="{Binding Path=SelectedModule, Mode=TwoWay}"                                   >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Display, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <Button Margin="10,10,10,10" FontSize="20" Content="ADD AN ASSIGNMENT"></Button>
            <ListBox ItemsSource="{Binding Assignments, Mode=OneWay}" Margin="10,0,10,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Display, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Page>

