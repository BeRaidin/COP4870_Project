        <!--            <ListBox Margin="10,0,10,0" ItemsSource="{Binding Courses, Mode=TwoWay}"-->
        <!--     SelectedItem="{Binding Path=SelectedCourse, Mode=TwoWay}" DoubleTapped="Course_DoubleTapped">-->
        <!--                <ListBox.ItemTemplate>-->
