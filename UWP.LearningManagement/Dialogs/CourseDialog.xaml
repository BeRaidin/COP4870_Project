<ContentDialog
    x:Class="UWP.LearningManagement.Dialogs.CourseDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP.LearningManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="New Course"
    PrimaryButtonText="Ok"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Code"></TextBlock>
        <TextBox Grid.Column="1" Text="{Binding Path=Code, Mode=TwoWay}"></TextBox>
        <TextBlock Grid.Row="1" Text="Name"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Path=Name, Mode=TwoWay}"></TextBox>
    </Grid>
</ContentDialog>
